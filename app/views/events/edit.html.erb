<h1>Editing Event</h1>
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Title: ", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.text_field :brief, label: "Brief: ", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :location, label: "Location: :", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :collaborators, label: "collaborators: ", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.datetime_field :event_start, label: "event_start", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.datetime_field :event_end, label: "event_end", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>

<%#= render 'form', event: @event %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
