

<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Event Title", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.text_area :brief, label: "About this event", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.datetime_field :event_start, label: "Starting", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.datetime_field :event_end, label: "Ending", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :location, label: "Location", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>

