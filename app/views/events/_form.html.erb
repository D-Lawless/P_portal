<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Event about it", input_html: { class: "input"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new event...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>