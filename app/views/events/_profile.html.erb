<div class="column is-one-quarter">
  <nav class="panel">
    <p class="panel-heading">Profile</p>
    <div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
            <%#= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= current_user.f_name %></strong> <strong><%= current_user.l_name %></strong><br />
              <small><%= link_to '@' + current_user.username, user_path(current_user.username) %> </small><br />
              <small><%= current_user.role %></small><br />
            </p>
          </div>
        </div>
      </article>
    </div>
    <div class="panel-block">
      <div class="level is-mobile">
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Collaborations</p>
            <p class="title is-6"><%= current_user.events.count %></p>
          </div>
        </div>
        <div class="level-item has-centered-text">
          <div>
            <p class="heading">Connections</p>
            <p class="title is-6">4</p>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>