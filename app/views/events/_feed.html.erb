<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png">
          <%#= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      <div class="media-content">
        <%= render 'events/form' %>
      </div>
    </article>
  <% end %>


  <% @events.each do | event | %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">

            <%#= gravatar_image_tag(event.user.email, size: 64, alt: event.user.name) %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= link_to event.user.username, user_path(event.user.username)%></strong><br/>
            <small><%= event.user.email %></small><br/>
            <p><%= event.title %></p>
            <p><%= event.location %></p>

          </div>
          <% if user_signed_in? && current_user.id == event.user_id %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to "View", event, class: "button is-outlined" %>
                <%= link_to "Edit", edit_event_path(event), class: "button is-outlined" %>
                <%= link_to "Delete", event, method: :delete, class: "button is-outlined", data: { confirm: "Are you sure you want to delete this event?" } %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>
