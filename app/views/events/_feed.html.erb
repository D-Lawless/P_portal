<div class="column is-three-quarters">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png">
          <%#= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      <div class="media-content">
        <%= render 'events/form' %>
      </div>
    </article>
  <% end %>

















  <% @events.each do |event| %>


    <div class="box">
      <article class="media">
        <div class="columns">
          <div class="column is-half">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4">
                  <%= event.user.username %>
                  <br/>
                </p>
                <p class="subtitle is-6"><%= link_to '@'+event.user.username, user_path(event.user.username) %></p>
              </div>
            </div>

            <div class="card">
              <div class="card-content">
                <div class="content">
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                  Phasellus nec iaculis mauris. <a>@bulmaio</a>.
                  <a href="#">#css</a> <a href="#">#responsive</a>
                  <br>
                  <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="media-content">
          <div class="content">

            <p><%= event.title %></p>
            <p><%= event.brief %></p>
            <p><%= event.location %></p>

          </div>
          <% if user_signed_in? && current_user.id == event.user_id %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to "View", event, class: "button is-outlined" %>
                <%= link_to "Edit", edit_event_path(event), class: "button is-outlined" %>
                <%= link_to "Delete", event, method: :delete, class: "button is-outlined", data: {confirm: "Are you sure you want to delete this event?"} %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>
